<%- include('./Components/head.ejs') %>

    <body>
        <%- include('./Components/navbar.ejs') %>
            <br>
            <div class="container" style="max-width: 70%; margin: 0 auto; box-shadow: 0 0.3em 0.9em white;">
                <br>
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <img src="https://image.tmdb.org/t/p/w185/<%=poster%>" alt="image not available"
                            class="img-fluid">
                    </div>
                    <div class="col-lg-7 col-md-6 ">
                        <h3 style="color: gold;">
                            <b>
                                <%= title %>
                            </b>
                        </h3>
                        <br>
                        <p><i>
                                <%= overview %>
                            </i></p>
                        <p style="color: gold;"><b>Release Date: </b>
                            <%= releaseDate %>
                        </p>
                        <br>
                        <p>Rating: <b style="color: gold;">
                                <%= rating %>
                            </b></p>
                        <p><b style="color: gold;">Genres: </b>
                            <% for(let genre of genres){ %>
                                <span>
                                    <%= genre.name+" " %></span>
                            <% } %></p>
                <p><b style=" color: gold;">Produced By: </b>
                                        <%= production.map(type=> `(${type.name}, ${type.origin_country})`).join(" ") %>
                        </p>
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="container">
                <% if (trailer.length> 0) { %>
                    <h1>All Trailers</h1>
                    <div class="row">
                        <% for (let count of trailer) { %>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe class="embed-responsive-item"
                                        src="https://www.youtube.com/embed/<%= count.key %>" allowfullscreen></iframe>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% } else { %>
                        <p>No trailer available.</p>
                        <% } %>

                            <br>

                            <% if (teaser.length> 0) { %>
                                <h1>Movie Teaser</h1>
                                <div class="row">
                                    <% for (let count of teaser) { %>
                                        <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <iframe class="embed-responsive-item"
                                                    src="https://www.youtube.com/embed/<%= count.key %>"
                                                    allowfullscreen></iframe>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } else { %>
                                    <p>No Teaser available.</p>
                                    <% } %>
            </div>
            <br>
            <br>
            <%- include('./Components/footer.ejs') %>

    </body>

    </html>